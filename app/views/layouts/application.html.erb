<!DOCTYPE html>
<html lang="zh-tw" >
<head>
  <%= favicon_link_tag '/favicon.ico' %>
  <%= render_page_title_tag %>
  <%= render_page_description_meta_tag %>
  <%= render_page_image_link_tag %>
  <%= csrf_meta_tags %>
  <% if @og.present? %>
  <%= render "common/og_tag" %>
  <% end %>

  <%= stylesheet_link_tag "application", media: "all" %>
  <%= stylesheet_link_tag params[:controller] %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag params[:controller] %>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= yield :stylesheets %>

</head>
<%= render_body_tag %>
<%= render :partial => "common/google_analytics" %>
<%= render :partial => "common/menu" %>
<% if params[:controller] == "welcome" && params[:action] == "index" %>
  <%= notice_message %>
  <%= yield %>
  <%= render :partial => "common/footer" %>
<% else %>
  <div class="container" style="padding-top:60px">
    <%= notice_message %>
    <%= yield %>
    <%= render :partial => "common/footer" %>
  </div>
<% end %>


<%= render :partial => "common/facebook_js" %>
<%= yield :javascripts %>
</body>
</html>
